host=localhost

[proxy]
type=proxy
host=localhost

<% for @sniff in @sniffing_interfaces %>
[<%= @sniff[:sensorname] %>]
type=worker
host=localhost
interface=<%= @sniff[:interface] %>
lb_method=pf_ring
lb_procs=<%= @sniff[:bro_lb_procs] %>
aux_scripts=<%= @sniff[:sensorname] %>_networks.bro

<%end %>
