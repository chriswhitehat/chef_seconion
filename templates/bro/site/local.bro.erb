## Load up enabled Bro Sigs e.g. node[:seconion][:sensor][:bro_sig]

<% @bro_sigs.each do |sig, enabled| %>
	<% if enabled %>
<%= "\@load-sigs #{sig}" %>
	<% else %>
<%= "\#\#\@load-sigs #{sig}" %>
	<% end %>
<% end %>


# Load up enabled Bro Scripts e.g. node[:seconion][:sensor][:bro_script]

<% @bro_scripts.each do |script, enabled| %>
	<% if enabled %>
<%= "\@load #{script}" %>
	<% else %>
<%= "\#\#\@load #{script}" %>
	<% end %>
<% end %>

