# Load up enabled Bro Sigs (node[:seconion][:sensor][:bro_sig])

<% @bro_sigs.each do |sig, enabled| %>
	<% if enabled %>
<%= "\@load #{sig}" %>
	<% else %>
<%= "\#\@load #{sig}" %>
	<% end %>
<% end %>


# Load up enabled Bro Scripts (node[:seconion][:sensor][:bro_script])

<% @bro_scripts.each do |script, enabled| %>
	<% if enabled %>
<%= "\@load #{script}" %>
	<% else %>
<%= "\#\@load #{script}" %>
	<% end %>
<% end %>

