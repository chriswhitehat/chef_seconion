config logdir: /nsm/sensor_data/<%= @sniff[:sensorname] %>
config classification_file: /etc/nsm/<%= @sniff[:sensorname] %>/classification.config
config reference_file:      /etc/nsm/<%= @sniff[:sensorname] %>/reference.config
config sid_file:            /etc/nsm/<%= @sniff[:sensorname] %>/sid-msg.map
config gen_file:            /etc/nsm/<%= @sniff[:sensorname] %>/gen-msg.map
config hostname: <%= @sniff[:sensorname] %>
config interface: <%= @sniff[:interface] %>
input unified2
output sguil: sensor_name=<%= @sniff[:sensorname] %> agent_port=<%= @barnyard_port %>
#output database: alert, mysql, user=root dbname=snorby host=127.0.0.1
output alert_syslog: LOG_LOCAL6 LOG_ALERT
