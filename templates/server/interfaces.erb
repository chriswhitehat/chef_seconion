#
# /etc/network/interfaces
#
# Generated by Chef for <%= node[:fqdn] %>
#

# loopback network interface
auto lo
iface lo inet loopback

# Management network interface
auto <%= node[:seconion][:server][:mgmt][:interface] %>
iface <%= node[:seconion][:server][:mgmt][:interface] %> inet static
  address <%= node[:seconion][:server][:mgmt][:ipv4] %>
  gateway <%= node[:seconion][:server][:mgmt][:gateway] %>
  netmask <%= node[:seconion][:server][:mgmt][:netmask] %>
  dns-nameservers <%= node[:seconion][:server][:mgmt][:nameserver] %>
  dns-domain <%= node[:seconion][:server][:mgmt][:domain] %>
